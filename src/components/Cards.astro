---
const { style="card p-3", title, description } = Astro.props
---

<div class={ style }>
  <div class="card-body">
    <slot />
    <h3 class="card-title">{title}</h3>
    <p class="lead">{description}</p>
    <slot name="button">
    </slot>
  </div>
</div>

<style>
  .card {
    border-radius: 0px;
    border: 2px solid black;
  }
</style>